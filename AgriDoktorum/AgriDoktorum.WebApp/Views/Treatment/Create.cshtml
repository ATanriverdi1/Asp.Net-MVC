@model AgriDoktorum.WebApp.Models.Entity.Treatment

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<h2>Yeni Tedavi Yöntemi</h2>

@using (Html.BeginForm("Create", "Treatment", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TreatmentTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TreatmentTitle, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TreatmentTitle, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TreatmentText, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.TreatmentText, new { @class = "ckeditor" })
                @Html.ValidationMessageFor(model => model.TreatmentText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1"></div>
            <div class="col-md-1"> <label for="file">Resim:</label></div>
            <div class="col-md-3">
                <input type="file" name="file" id="file" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye Dön", "TreatmentView", "AdminView", null, new { @class = "btn btn-primary" })
</div>
