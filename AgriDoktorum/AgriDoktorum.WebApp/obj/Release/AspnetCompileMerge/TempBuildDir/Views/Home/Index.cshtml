@using AgriDoktorum.WebApp.Models.ViewModel.Home
@model IndexViewModel
@{
    ViewBag.Title = "Index";
    <title>MigrenDoktorun</title>
}


<!-- slider_area_start -->
<div class="slider_area">
    <div class="single_slider  d-flex align-items-center slider_bg_2">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="slider_text text-right">
                        <h3>
                            <span>MİGREN TEDAVİSİNDE</span>
                            <br />
                            <span>BÜTÜNCÜL YAKLAŞIM:</span>
                            <br />
                            <span>
                                KİŞİYE ÖZEL
                                <br />
                                ENJEKSİYON
                                <br />
                                YÖNTEMLERİ İLE
                            </span>
                        </h3>
                        <h4>
                            MİGREN VE KRONİK BAŞ AĞRILARINIZDAN KALICI OLARAK KURTULABİLİRSİNİZ..
                        </h4>
                        <h5>
                            Migren ağrılarınızdan ve kronik baş ağrılarınızdan kalıcı olarak kurtulmak için bize ulaşabilirsiniz..
                        </h5>
                        <a href="@Url.Action("Index","Treatment")" class="boxed-btn3">Migren Tedavisi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider_area_end -->
<!-- welcome_docmed_area_start -->
<div class="welcome_docmed_area" style="width:85%">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5">
                <div class="welcome_thumb">
                    <div class="thumb_1">
                        <img src="/web/img/about/1.png" alt="">
                    </div>
                    <div class="thumb_2" style="width: 60%">
                        <img src="/web/img/about/2.png" alt="">
                    </div>
                </div>
            </div>
            @foreach (var item in Model.AboutView)
            {
                <div class="col-xl-7 col-lg-7">
                    <div class="welcome_docmed_info">
                        <h3>@item.AboutTitle</h3>
                        <hr />
                        @if (item.AboutDescription.Length > 600)
                        {
                            <p>@Html.Raw(item.AboutDescription.Substring(0, 600) + "...")</p>
                            <br />
                            <a href="@Url.Action("Index","About")" class="boxed-btn3-white-2">Daha Fazla</a>
                        }
                        else
                        {
                            <p>@Html.Raw(item.AboutDescription)</p>
                            <br />
                            <a href="@Url.Action("Index","About")" class="boxed-btn3-white-2">Daha Fazla</a>
                        }

                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- welcome_docmed_area_end -->
<!-- service_area_start -->
<div class="service_area">
    <div class="container p-0">
        <div class="row no-gutters">
            <div class="col-xl-4 col-md-4">
                <div class="single_service">
                    <div class="icon">
                        <i class="flaticon-electrocardiogram"></i>
                    </div>
                    <h3>SEMPTOM KONTROLÜ</h3>
                    <p>Şikayetlerinizi bize ulaşarak iletin ağrı kaynağı hakkında ve tedavisi konusunda bilgi alabilirsiniz..</p>
                    <a href="@Url.Action("Index","Treatment")" class="boxed-btn3-white">Migren Tedavisi</a>
                </div>
            </div>
            <div class="col-xl-4 col-md-4">
                <div class="single_service">
                    <div class="icon">
                        <i class="flaticon-emergency-call"></i>
                    </div>
                    <h3>HIZLI BİLGİLENDİRME</h3>
                    <p>Mesai saatleri içerisinde bize ulaşarak tedavilerimiz hakkında bilgi alabilir ağrılarınıza çözüm bulabilirsiniz.</p>
                    <a href="tel:+905325115792" class="boxed-btn3-white">0532 511 5792</a>
                </div>
            </div>
            <div class="col-xl-4 col-md-4">
                <div class="single_service">
                    <div class="icon">
                        <i class="flaticon-first-aid-kit"></i>
                    </div>
                    <h3>DOKTORUNUZ..</h3>
                    <p>Tedavinizin öncesinde ve tedavi sürecinde sizinle sadece Uzm dr Ahmet Dalmızrak ilgilenmektedir.</p>
                    <a href="@Url.Action("Index","About")" class="boxed-btn3-white">Hakkımda</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- service_area_end -->
<!-- offers_area_start -->
<div class="our_department_area">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center mb-55">
                    <h3>Tedavi Yöntemlerimiz</h3>
                    <p>
                        TEDAVİ OLUN, MİGREN KADERİNİZ OLMASIN!!!
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.TreatmentView)
            {
                <div class="col-xl-4 col-md-6 col-lg-4">
                    <div class="single_department">
                        <div class="department_thumb" style="height: 300px">
                            <img src="~/upload/Treatment/@item.TreatmentImage" alt="">
                        </div>
                        <div class="department_content">
                            <h3><a href="@Url.Action("Index","Treatment")">@item.TreatmentTitle</a></h3>
                            @if (item.TreatmentText.Length > 90)
                            {
                                <p>@Html.Raw(item.TreatmentText.Substring(0, 90) + "...")</p>
                                <a href="@Url.Action("Details","Treatment", new {id = item.Id })" class="learn_more">Daha Fazla</a>
                            }
                            else
                            {
                                <p>@Html.Raw(item.TreatmentText)</p>
                                <a href="@Url.Action("Details","Treatment", new {id = item.Id })" class="learn_more">Daha Fazla</a>
                            }
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- offers_area_end -->
<!-- testmonial_area_start -->
<div class="testmonial_area">
    <div class="testmonial_active owl-carousel">
        @foreach (var item in Model.PatientReferenceView)
        {
            <div class="single-testmonial testmonial_bg_1 overlay2">
                <div class="container">
                    <div class="row">

                        <div class="col-xl-10 offset-xl-1">
                            <div class="testmonial_info text-center">
                                <div class="quote">
                                    <i class="flaticon-straight-quotes"></i>
                                </div>
                                <p>
                                    @Html.Raw(item.ReferenceRemark)
                                </p>
                                <div class="testmonial_author">
                                    <h4>@item.ReferenceName @item.ReferenceSurname </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- testmonial_area_end -->
<!-- expert_doctors_area_start -->
<div class="expert_doctors_area">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="doctors_title mb-55 text-center">
                    <h3 class="text-center" style="font-style:italic;color:dodgerblue"><strong>HASTA VİDEOLARI</strong></h3>
                    <hr />
                    <span class="text-center"><strong>Daha fazla video için YouTube kanalımızı ziyaret ediniz.</strong></span>
                    <br />
                    <a href="https://www.youtube.com/channel/UCDJ7Z3B2EF96i02pZmxhoDA" class="btn btn-outline-danger">
                        <span class="fa fa-youtube"> YouTube</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="expert_active owl-carousel">
                    @foreach (var item in Model.GalleryViews)
                    {
                        <div class="single_expert">
                            <div class="expert_thumb">
                                <iframe src="@item.VideoUrl" allowfullscreen></iframe>
                            </div>
                            <div class="experts_name text-center">
                                <span>
                                    @item.Description
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="doctors_title mb-55 text-center">
            <a href="@Url.Action("Index","Gallery")" class="btn btn-primary btn">
                <span> Hasta Videoları </span>
            </a>
        </div>
    </div>
</div>
<!-- expert_doctors_area_end -->