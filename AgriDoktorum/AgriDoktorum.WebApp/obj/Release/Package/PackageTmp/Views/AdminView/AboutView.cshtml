@model IEnumerable<AgriDoktorum.WebApp.Models.Entity.About>
@{
    ViewBag.Title = "AboutView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkında</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AboutTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AboutDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AboutTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AboutDescription)
            </td>
            <td>
                @if (item != null)
                {
                    @Html.ActionLink("Düzenle", "Edit", "About", new { id = item.Id }, new { @class = "btn btn-primary btn" })
                }
            </td>
        </tr>
    }

</table>
